<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/leftRightMain"
    android:orientation="vertical"
    tools:context="com.avans.easypay.DrinksAndFoodActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="368dp"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Kies locatie uit:" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/locatie_btn1"
                android:layout_width="200dp"
                android:layout_height="62dp"
                android:text="Liqueurpaleis" />

            <Button
                android:id="@+id/locatie_btn2"
                android:layout_width="200dp"
                android:layout_height="62dp"
                android:text="Pizzahut" />

            <Button
                android:id="@+id/locatie_btn3"
                android:layout_width="200dp"
                android:layout_height="62dp"
                android:text="Bierplaza" />

            <Button
                android:id="@+id/locatie_btn4"
                android:layout_width="200dp"
                android:layout_height="62dp"
                android:text="Koffiehuis" />

            <Button
                android:id="@+id/locatie_btn5"
                android:layout_width="200dp"
                android:layout_height="62dp"
                android:text="Friettent" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
