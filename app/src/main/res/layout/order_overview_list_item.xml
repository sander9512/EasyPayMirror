<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/leftRightMain"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/order_number_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/order_location_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Pizzahut"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/order_date_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="09:45 - 31/05/2017"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/status_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:buttonTint="@color/colorPrimary"
                android:clickable="false"
                android:focusable="false"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/status_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_x"
                android:buttonTint="@color/colorPrimary"
                android:clickable="false"
                android:focusable="false"
                android:textSize="14sp"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>