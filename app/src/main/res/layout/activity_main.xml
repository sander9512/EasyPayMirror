<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.avans.easypay.MainActivity">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/topBottomMain"
            android:layout_marginLeft="@dimen/leftRightMain"
            android:layout_marginRight="@dimen/leftRightMain"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:text="@string/Order"
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/button"
                android:layout_marginRight="@dimen/button"
                android:layout_weight="1"
                android:background="@drawable/button" />

            <Button
                android:layout_marginBottom="@dimen/button"
                android:layout_marginLeft="@dimen/button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/button"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="@dimen/leftRightMain"
            android:layout_marginRight="@dimen/leftRightMain"
            android:layout_marginBottom="@dimen/topBottomMain"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:layout_marginTop="@dimen/button"
                android:layout_marginRight="@dimen/button"
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button"/>

            <Button
                android:layout_marginTop="@dimen/button"
                android:layout_marginLeft="@dimen/button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/button"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
