<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/overview_location1_id"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Locatie"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/overview_order1_nr"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ordernummer"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/overview_date1_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Datum"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/overview_location_id"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Locatie"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/overview_order_nr"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ordernummer"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/overview_date_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Datum"
            android:textSize="20dp"
            />

    </LinearLayout>


    <ListView
        android:id="@+id/Order_Overview"
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:layout_weight="0.99" />

    <TextView
        android:id="@+id/overview_subtotaal_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Subtotaal:"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    </LinearLayout>