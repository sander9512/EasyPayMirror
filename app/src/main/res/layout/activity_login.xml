<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.avans.easypay.LoginActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_easypay_logo_black" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp">
            <LinearLayout
                android:id="@+id/inputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/username_login"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginBottom="@dimen/leftRightMain"/>

                <EditText
                    android:id="@+id/username_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:background="@drawable/edittext"
                    android:padding="4dp"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/password_login"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginBottom="@dimen/leftRightMain"/>

                <EditText
                    android:id="@+id/password_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:background="@drawable/edittext"
                    android:padding="4dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:orientation="vertical"
                android:layout_below="@id/inputLayout">

                <Button
                    android:layout_marginBottom="@dimen/topBottomMain"
                    android:id="@+id/login_btn"
                    android:onClick="loginBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="@string/login_login"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_marginTop="@dimen/topBottomMain"
                    android:id="@+id/signup_btn"
                    android:onClick="signupBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/button"
                    android:text="@string/signup_login"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
